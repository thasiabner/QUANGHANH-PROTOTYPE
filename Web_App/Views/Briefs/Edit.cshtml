                        <option>4/4(Thương tật từ 21% trở lên)</option>
                    </select>
                </div>
                <div class="col-sm-4">
                    <label>Gia đình liệt sĩ</label>
                    <input type="text" class="form-control" placeholder="Liệt sĩ" value="Không" />
                </div>

                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <br />
                    <button class="btn btn-primary">Cập nhật</button>
                    <button class="btn btn-danger">Xóa</button>
                </div>
                <div class="col-sm-4"></div>

            </div>
