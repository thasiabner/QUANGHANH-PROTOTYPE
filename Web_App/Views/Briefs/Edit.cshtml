@{
    ViewBag.Title = "Ed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div>
        <div class="text-center">
            <div class="btn-custom form-control"><label>Thông tin chi tiết</label></div>
        </div>
        <div>
