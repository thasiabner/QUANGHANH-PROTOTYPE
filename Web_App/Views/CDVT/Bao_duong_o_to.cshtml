<div id="addFixModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Giao diện nhập bảo dưỡng</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body col-lg-12">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="id">Mã bảo dưỡng: </label>
                            <input type="text" class="form-control" id="id" />
                        </div>
                        <div class="form-group">
                            <label for="name">Bộ phận bàn giao: </label>
                            <input type="text" class="form-control" id="name" />
                        </div>
                        <div class="form-group">
                            <label for="depreciation">Bộ phận bảo dưỡng: </label>
                            <input type="text" class="form-control" id="depreciation" />
                        </div>
                        <div class="form-group">
                            <label for="startdate">Ngày bắt đầu: </label>
                            <input type="date" class="form-control" id="startdate" />
                        </div>
                        <div class="form-group">
                            <label for="dateexpected">Ngày dự tính xong: </label>
                            <input type="date" class="form-control" id="dateexpected" />
                        </div>
                        <div class="form-group">
                            <label for="enddate">Ngày hoàn thành: </label>
                            <input type="date" class="form-control" id="enddate" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="statusbefore">Tình trạng trước bảo dưỡng: </label>
                            <input type="text" class="form-control" id="statusbefore" />
                        </div>
                        <div class="form-group">
                            <label for="statusafter">Tình trạng sau bảo dưỡng</label>
                            <input type="text" class="form-control" id="statusafter" />
                        </div>
                        <div class="form-group">
                            <label for="detail">Chi tiết: </label>
                            <input type="text" class="form-control" id="detail" />
                        </div>
                        <div class="form-group">
                            <label for="fee">Chi phí</label>
                            <input type="number" class="form-control" id="fee" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-danger" style="float: left;">Nhập lại</button>
                    <button type="submit" class="btn btn-primary" style="float: left;">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
