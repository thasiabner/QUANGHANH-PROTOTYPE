                <i class="fa fa-arrow-right"></i>
            </button>
        </div>
    </div>
</div>
<div id="addFixModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Giao diện nhập sự cố</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body col-lg-12">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="id">Mã thiết bị: </label>
                            <input type="text" class="form-control" id="id" />
                        </div>
                        <div class="form-group">
                            <label for="bangiao">Bộ phận bàn giao: </label>
                            <input type="text" class="form-control" id="bangiao" />
                        </div>
                        <div class="form-group">
                            <label for="suachua">Bộ phận sửa chữa: </label>
                            <input type="text" class="form-control" id="suachua" />
                        </div>
                        <div class="form-group">
                            <label for="occur">Ngày bắt đầu: </label>
                            <input type="date" class="form-control" id="occur" />
                        </div>
                        <div class="form-group">
                            <label for="finishexpect">Ngày dự tính hoàn thành: </label>
                            <input type="date" class="form-control" id="finishexpect" />
                        </div>
                        <div class="form-group">
                            <label for="finishdate">Ngày hoàn thành thực tế: </label>
                            <input type="date" class="form-control" id="finishdate" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="fixstatus">Tình trạng sửa chữa: </label>
                            <input type="text" class="form-control" id="fixstatus" />
                        </div>
                        <div class="form-group">
                            <label for="afterfix">Tình trạng sau sửa chữa: </label>
                            <input type="text" class="form-control" id="afterfix" />
                        </div>
                        <div class="form-group">
                            <label for="detail">Chi tiết: </label>
                            <input type="text" class="form-control" id="detail" />
                        </div>
                        <div class="form-group">
                            <label for="fee">Chi phí: </label>
                            <input type="number" class="form-control" id="hour" />
                        </div>
                        <div class="form-group">
                            <label for="reason">Lí do sửa chữa</label>
                            <input type="text" class="form-control" id="reason" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-danger" style="float: left;">Nhập lại</button>
                    <button type="submit" class="btn btn-primary" style="float: left;">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

