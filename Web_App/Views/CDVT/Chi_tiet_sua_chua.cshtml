@{
    ViewBag.Title = "Chi tiết sửa chữa";
    Layout = "~/Views/Shared/_CDVT_Layout.cshtml";
}

<div class="col-md-12" style="background-color: white;margin:20px 10px; padding-bottom:30px;">
    <div class="col-md-12" style="margin-bottom: 40px;">
        <div class="col-md-3">
            <h3>Chi tiết sửa chữa thiết bị</h3>
        </div>
        <div class="col-md-3">
            <input list="size" class="form-control" placeholder="Nhập để từ khóa tìm kiếm" style="margin-top: 20px;float: left" />
        </div>
        <div class="col-md-2">
            <button type="submit" style="margin-top:20px;border: 1px solid #ccc;height:33px; border-radius: 10%">
                Tìm kiếm
            </button>
        </div>
        <div class="col-md-4">
            <a href="#addFixModal" data-toggle="modal">
                <button class="btn btn-custom" type="submit"
                        style="font-size: 12px; margin-top:20px; margin-right: 20px">
                    Thêm
                </button>
            </a>
            <button class="btn btn-custom" type="submit" style="font-size: 12px;margin-top:20px; margin-right: 20px">Tải lên</button>
            <button class="btn btn-custom" type="submit" style="font-size: 12px;margin-top:20px; margin-right: 20px">Tải về</button>
            <button class="btn btn-custom" type="submit" style="font-size: 12px;margin-top:20px; margin-right: 20px">In báo cáo</button>
        </div>
    </div>
    <div class="col-md-6">
        <form class="form-horizontal">
            <label class="control-label col-xs-4" for="usr">Hiển chị số dòng/trang</label>
            <div class="col-xs-8">
                <input list="sizes">
                <datalist id="sizes">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </datalist>
            </div>
        </form>
    </div>
    <div class="col-md-12">
        <table class="table table-hover" style="margin-top:30px; text-align:center; zoom:75%">
            <tr>
                <th>Mã sửa chữa</th>
                <th>Bộ phận bàn giao</th>
                <th>Bộ phận sửa chữa</th>
                <th>Lí do sửa chữa</th>
                <th>Ngày bắt đầu</th>
                <th>Tình trạng trước sửa chữa</th>
                <th>Ngày dự tính xong</th>
                <th>Ngày hoàn thành</th>
                <th>Tình trạng sau sửa chữa</th>
                <th>Chi tiết</th>
                <th>Chi phí</th>
                <th>Xem sự cố xóa, sửa</th>
            </tr>
