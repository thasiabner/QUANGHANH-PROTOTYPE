                <td>17/12/1999</td>
                <td></td>
                <td>Thay bánh</td>
                <td>100000</td>
                <td>
                    <a href="#" class="btn btn-custom" style="color:white">Xem</a>
                    <a href="#delete" data-toggle="modal">
                        <button class="btn btn-danger">
                            Xóa
                        </button>
                    </a>
                    <button type="button" class="btn btn-custom">Sửa</button>
                </td>
            </tr>
            <tr>
                <td>003</td>
                <td></td>
