<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Giao diện nhập thiết bị</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body col-lg-12">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="id">Mã thiết bị: </label>
                            <input type="text" class="form-control" id="id" />
                        </div>
                        <div class="form-group">
                            <label for="name">Tên thiết bị: </label>
                            <input type="text" class="form-control" id="name" />
                        </div>
                        <div class="form-group">
                            <label for="serial">Số seri: </label>
                            <input type="number" class="form-control" id="serial" />
                        </div>
                        <div class="form-group">
                            <label for="guarantee">Bảo hành (tháng): </label>
                            <input type="number" class="form-control" id="guarantee" />
                        </div>
                        <div class="form-group">
                            <label for="expiry">Hạn dùng (tháng): </label>
                            <input type="number" class="form-control" id="expiry" />
                        </div>
                        <div class="form-group">
                            <label for="date">Ngày đưa vào sử dụng: </label>
                            <input type="date" class="form-control" id="date" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="manufacture">Nhà sản xuất: </label>
                            <input type="text" class="form-control" id="manufacture" />
                        </div>
                        <div class="form-group">
                            <label for="price">Giá nhập: </label>
                            <input type="number" class="form-control" id="price" placeholder="vnđ" />
                        </div>
                        <div class="form-group">
                            <label for="depreciation">Tỷ lệ hao mòn (%/năm): </label>
                            <input type="number" class="form-control" id="depreciation" placeholder="%" />
                        </div>
                        <div class="form-group">
                            <label for="status">Tình trạng: </label>
                            <select id="status" class="form-control">
                                <optgroup label="Có sẵn">
                                    <option value="ready">Chờ huy động</option>
                                    <option value="fixing">Chờ sửa chữa</option>
                                </optgroup>
                                <optgroup label="Không có sẵn">
                                    <option value="sale">Chờ thanh lý</option>
                                    <option value="sold">Đã thanh lý</option>
                                    <option value="using">Đang sử dụng</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="detail">Mô tả: </label>
                            <textarea rows="4" class="form-control" id="detail"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-danger" style="float: left;">Nhập lại</button>
                    <button type="submit" class="btn btn-primary" style="float: left;">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
